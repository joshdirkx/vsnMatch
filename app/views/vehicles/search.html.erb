<h1>Results for Query: <%= params[:search] %></h1>
<div>
  <% if @found_match == true %>
    <%= render :file => 'partials/best_match_found' %>
  <% else %>
    <%= render :file => 'partials/no_best_match_found' %>
  <% end %>
</div>
<br/>
<%= link_to 'Search Again', root_path %>
<script type="text/javascript">
  $(document).ready(function() {
    $("#expand").click(function () {
      $("#options").stop().slideToggle(2000);
      return false;
    });
  });
</script>